<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="observable" factory-bean="mbeanPublisher" factory-method="watch">
        <constructor-arg value="${mbean.name}"/>
    </bean>

    <bean factory-bean="observable" factory-method="subscribe" destroy-method="unsubscribe">
        <constructor-arg>
		    <bean class="org.jocean.j2se.zk.UnitConfigOnZKUpdater">
		        <constructor-arg ref="zkClient"/>
		        <property name="template" value="${template}" />
		        <property name="path" value="${path}" />
		    </bean>
        </constructor-arg>
    </bean>
</beans>
