<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="unitcfg" 
        class="org.jocean.j2se.zk.UnitConfigOnZKUpdater">
        <constructor-arg ref="zkClient"/>
        <property name="template" value="${template}" />
        <property name="path" value="${path}" />
    </bean>
    
    <bean id="observable" 
        factory-bean="mbeanPublisher" 
        factory-method="watch" >
        <constructor-arg value="${mbean.name}"/>

    <bean id="subscription" 
        factory-bean="observable" 
        factory-method="subscribe"
        destroy-method="unsubscribe" >
        <constructor-arg ref="unitcfg"/>
</beans>
