<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:${zkbooter:zkbooter.properties}</value>
            </list>
        </property>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>
    
    <bean id="zkClient" class="org.jocean.j2se.zk.ZKUtils"
        factory-method="buildWithExhibitorEnsembleProvider"
        init-method="start"
        destroy-method="close">
        <constructor-arg>
            <bean class="org.springframework.util.StringUtils"
                factory-method="commaDelimitedListToStringArray">
                <constructor-arg value="${exhibitor.hosts}"/>
            </bean>
        </constructor-arg>
        <constructor-arg value="${exhibitor.restport}"/>
        <constructor-arg value="${zk.address}"/>
        <constructor-arg value="${exhibitor.basicAuthUser:}"/>
        <constructor-arg value="${exhibitor.basicAuthPass:}"/>
        <constructor-arg value="${exhibitor.restUriPath:/exhibitor/v1/cluster/list}"/>
        <constructor-arg value="${exhibitor.pollingMs:2000}"/>
        <constructor-arg>
            <bean class="org.apache.curator.retry.ExponentialBackoffRetry">
                <constructor-arg value="1000"/>
                <constructor-arg value="3"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="eventEngine" class="org.jocean.event.extend.Runners"
        factory-method="build">
        <constructor-arg>
            <bean class="org.jocean.event.extend.Runners.Config">
                <constructor-arg value="org.jocean:type=eventengine"/>
                <constructor-arg value="${eventengine.name:default}"/>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateTimerService">
                        <constructor-arg value="${eventengine.name:default}"/>
                    </bean>
                </constructor-arg>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateFlowBasedExecutorSource">
                        <constructor-arg value="${eventengine.name:default}"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="unitAgent" class="org.jocean.j2se.unit.UnitAgent"/>
    
    <bean id="unitUpdater" class="org.jocean.j2se.zk.ZKUpdater"
        init-method="start" destroy-method="stop">
        <constructor-arg ref="eventEngine"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.units.path}"/>
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.UnitOperator">
                <constructor-arg ref="unitAgent"/>
            </bean>
        </constructor-arg>
    </bean>
 
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:type=zkclient" 
                    value-ref="zkClient"/>
                <entry key="org.jocean:type=unitAgent" 
                    value-ref="unitAgent"/>
            </map>
        </property>
    </bean>
     
</beans>
