<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="unitAgent" class="org.jocean.j2se.unit.UnitAgent"
        destroy-method="stop"/>
    
    <bean id="zkAgent" class="org.jocean.j2se.zk.ZKAgent"
        init-method="start" 
        destroy-method="stop">
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.root.path:/}"/>
    </bean>

    <bean factory-bean="zkAgent" factory-method="addListener"
        destroy-method="run">
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.ZKUnitUpdater">
                <constructor-arg ref="unitAgent"/>
                <property name="root" value="${zk.units.path}"/>
            </bean>
        </constructor-arg>
    </bean>

    <bean id="serviceInfo" 
        class="org.jocean.j2se.ModuleInfo" >
        <constructor-arg value="${user.dir}/bin/${app.name}.jar"/>
    </bean>
     
    <bean class="java.lang.System" factory-method="setProperty">
        <constructor-arg value="service.buildno"/>
        <constructor-arg>
            <bean factory-bean="serviceInfo" factory-method="getModuleBuildNo"/>
        </constructor-arg>
    </bean>
</beans>
