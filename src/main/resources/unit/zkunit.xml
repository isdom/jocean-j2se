<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="unitAgent" class="org.jocean.j2se.unit.UnitAgent"
        destroy-method="stop"/>
    
    <bean id="unitUpdater" class="org.jocean.j2se.zk.ZKAgent"
        init-method="start" 
        destroy-method="stop">
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.units.path}"/>
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.ZKUnitUpdater">
                <constructor-arg ref="unitAgent"/>
            </bean>
        </constructor-arg>
    </bean>
     
</beans>
