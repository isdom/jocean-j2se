<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean id="__zkagent" class="org.jocean.j2se.zk.ZKAgent"
        init-method="start" 
        destroy-method="stop">
        <constructor-arg name="client" ref="zkClient"/>
        <constructor-arg name="root" value="${zk.units.path}"/>
    </bean>

    <bean factory-bean="__zkagent" factory-method="addListener"
        destroy-method="call">
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.ZKUnitUpdater">
                <constructor-arg name="unitAgent">
                    <bean class="org.jocean.j2se.unit.UnitAgent"
                        destroy-method="stop"/>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
</beans>
