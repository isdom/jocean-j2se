<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:${zkunits:zkunits.properties}</value>
            </list>
        </property>
        <property name="fileEncoding" value="UTF-8"/>
    </bean>
    
    <bean id="zkClient" class="org.apache.curator.framework.CuratorFrameworkFactory"
        factory-method="newClient"
        init-method="start">
        <constructor-arg value="${zk.address}"/>
        <constructor-arg>
            <bean class="org.apache.curator.retry.ExponentialBackoffRetry">
                <constructor-arg value="1000"/>
                <constructor-arg value="3"/>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="eventEngine" class="org.jocean.event.extend.Runners"
        factory-method="build">
        <constructor-arg>
            <bean class="org.jocean.event.extend.Runners.Config">
                <constructor-arg value="org.jocean:type=eventengine"/>
                <constructor-arg value="${eventengine.name:default}"/>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateTimerService">
                        <constructor-arg value="${eventengine.name:default}"/>
                    </bean>
                </constructor-arg>
                <constructor-arg>
                    <bean class="org.jocean.event.extend.Services" 
                        factory-method="lookupOrCreateFlowBasedExecutorSource">
                        <constructor-arg value="${eventengine.name:default}"/>
                    </bean>
                </constructor-arg>
            </bean>
        </constructor-arg>
    </bean>
    
    <bean id="unitAgent" class="org.jocean.j2se.unit.UnitAgent"/>
    
    <bean id="unitUpdater" class="org.jocean.j2se.zk.ZKUpdater"
        init-method="start" destroy-method="stop">
        <constructor-arg ref="eventEngine"/>
        <constructor-arg ref="zkClient"/>
        <constructor-arg value="${zk.units.path}"/>
        <constructor-arg>
            <bean class="org.jocean.j2se.unit.UnitOperator">
                <constructor-arg ref="unitAgent"/>
            </bean>
        </constructor-arg>
    </bean>
 
    <bean id="jmxConnectorServer" 
        class="org.springframework.jmx.support.ConnectorServerFactoryBean"  >
        <property name="serviceUrl" value="service:jmx:jmxmp://0.0.0.0:${jmxmp.port:9876}" />
        <property name="threaded"   value="true" />
        <property name="daemon"     value="true" />
        <property name="objectName" value="org.jocean:type=agent,name0=jmxmp" />
    </bean>
     
    <bean id="htmlAdaptorServer" class="org.jocean.jdmk.comm.HtmlAdaptorServer" 
        init-method="start" destroy-method="stop">
        <property name="port" value="${jmxhtml.port:8082}"/>
    </bean>
    
    <bean id="exporter" class="org.springframework.jmx.export.MBeanExporter"
          lazy-init="false">
        <property name="beans">
            <map>
                <entry key="org.jocean:type=htmladapter,port=${jmxhtml.port:8082}" 
                    value-ref="htmlAdaptorServer"/>
                <entry key="org.jocean:type=zkclient" 
                    value-ref="zkClient"/>
                <entry key="org.jocean:type=unitAgent" 
                    value-ref="unitAgent"/>
            </map>
        </property>
    </bean>
     
</beans>
